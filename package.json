{
	"name": "novelty",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"dev": "turbo run dev --parallel",
		"build": "turbo run build",
		"serve": "turbo run serve --parallel",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"check": "turbo run check",
		"format": "prettier --write \"**/*.{json,js,ts,md,svelte}\"",
		"clean": "del-cli ./**/dist/ ./**/.svelte-kit/ ./**/node_modules/ ./**/.turbo/"
	},
	"devDependencies": {
		"del-cli": "5.1.0",
		"turbo": "1.10.14"
	}
}
